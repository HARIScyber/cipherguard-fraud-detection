# Docker Compose Environment Configuration
# Copy this file to .env and customize for your deployment

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-please
BCRYPT_ROUNDS=12

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=admin123
ADMIN_FULL_NAME=System Administrator

# Database Configuration
POSTGRES_DB=sentiment_db
POSTGRES_USER=sentiment_user
POSTGRES_PASSWORD=sentiment_password
DATABASE_URL=postgresql://sentiment_user:sentiment_password@database:5432/sentiment_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=false
LOG_LEVEL=INFO

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501

# Optional Redis Configuration
REDIS_URL=redis://redis:6379/0

# ==================== REAL-TIME ALERT SERVICES ====================
# Configure these for real SMS and Email alerts

# Twilio SMS Configuration (https://twilio.com - $15 free trial credit)
# Get credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Email Configuration (https://sendgrid.com - 100 emails/day free)
# Get API Key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_SENDER_EMAIL=alerts@yourdomain.com

# Note: If these are not configured, alerts will run in SIMULATION mode
# and log messages instead of sending real SMS/Email

# Production Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,https://yourdomain.com
ENABLE_ANALYTICS_CACHE=true
CACHE_EXPIRE_MINUTES=15

# Nginx Configuration (for production profile)
NGINX_SERVER_NAME=yourdomain.com
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem