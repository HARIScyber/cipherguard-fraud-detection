# Database Configuration
DATABASE_URL=postgresql://sentiment_user:sentiment_password@localhost:5432/sentiment_db
# Alternative SQLite for development:
# DATABASE_URL=sqlite:///./sentiment.db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
DEBUG_MODE=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,http://127.0.0.1:8501
ALLOW_CREDENTIALS=true

# Admin User Configuration (for initial setup)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_FULL_NAME=System Administrator

# ML Model Configuration
MODEL_PATH=./models/
MODEL_VERSION=1.0.0
RETRAIN_ON_STARTUP=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache Configuration
ENABLE_ANALYTICS_CACHE=true
CACHE_EXPIRE_MINUTES=15

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_HOURS=24

# Production Settings (set these for production deployment)
# DATABASE_URL=postgresql://user:password@db:5432/sentiment_production
# JWT_SECRET_KEY=generate-a-strong-random-key-for-production
# DEBUG_MODE=false
# API_RELOAD=false
# LOG_LEVEL=WARNING